@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Estilos gerais */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .container1 {
        display: flex;
        min-height: 100vh; /* Ajuste para ocupar toda a altura da tela */
    }

    /* Barra lateral */
    .sidebar1 {
        width: 150px;
        background-color: slategrey;
        color: silver;
        padding: 20px;
        transition: width 0.3s;
    }

    /* Conteúdo principal */
    .content1 {
        flex: 1;
        padding: 20px;
        background-color: silver;
    }

    /* Estilos para links */
    .sidebar1 a {
        color: silver;
        text-decoration: none;
        display: block;
        padding: 10px 0;
    }

    .sidebar1 a:hover {
        background-color: lightslategray; /* Cor de fundo ao passar o mouse */
    }


    /* Estilos do cabeçalho e rodapé */
    header1 {
        background-color: white;
        color: black;
        text-align: center;
        padding: 20px;
    }

    header1 h1 {
        margin: 0;
    }

    nav {
    margin-top: 10px;
    }

    nav a {
    color: black;
    text-decoration: none;
    margin: 0 15px;
    font-weight: bold;
    }

    nav a:hover {
        text-decoration: underline;
    }

    footer1 {
        background-color: red;
    /*     color: red; */
        text-align: center;
        padding: 0px;
        position: relative;
        bottom: 0;
        width: 100%;
    }

    .social-links {
        margin: 10px 0;
    }

    .social-links a {
        color: white;
        margin: 0 10px;
        text-decoration: none;
    }


    /* Estilos do cabeçalho e rodapé */
    header1, footer1 {
        /* background-color: #4CAF50; */
  /*       color: red; */
        text-align: center;
 /*        padding: 10px; */
    }

</style>

<body>
    <header1>
        <h1>@ViewData["Title"]</h1>
    </header1>

    <div class="container1">
        <!-- Barra Lateral -->
        <div class="sidebar1">
            <h2>Menu</h2>
            <ul>
                <li><a href="/Grid/GridSticky"><span class="menu-text">Grid Sticky</span></a></li>
                <li><a href="#"><span class="menu-text">Serviços</span></a></li>
                <li><a href="#"><span class="menu-text">Sobre</span></a></li>
                <li><a href="#"><span class="menu-text">Contato</span></a></li>
            </ul>
        </div>

        <!-- Conteúdo Principal -->
        <div class="content1">
            <h1>Bem-vindo ao site!</h1>
            <p>Exemplo de conteúdo principal.</p>
        </div>
    </div>

    <footer1>
        <p>&copy; 2024 Meu Site. Todos os direitos reservados.</p>
    </footer1>
</body>
